# Production Environment Variables

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1

# Database (Update with your production database credentials)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-strong-production-password
DB_DATABASE=university_platform

# JWT (MUST CHANGE THESE!)
JWT_SECRET=CHANGE-THIS-TO-A-STRONG-RANDOM-SECRET-IN-PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE-THIS-TO-A-STRONG-REFRESH-SECRET-IN-PRODUCTION
JWT_REFRESH_EXPIRES_IN=7d

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRES_IN=15m

# Email Configuration (Use production SMTP or service like SendGrid, AWS SES)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@youruniversity.com

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Absence Rules
MAX_ABSENCES_BEFORE_ELIMINATION=5
ABSENCE_ELIMINATION_WARNING_THRESHOLD=3

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=warn
